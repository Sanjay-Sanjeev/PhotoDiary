<% include ../../partials/header %>



<div class="container" id="showContainer">
    <div class="row">
        <div class="col-md-9" >
            <h1><%= Photo.title %></h1>
            <div class="thumbnail">
                <img src="<%= Photo.image%>" class="img-fluid">
                <div class="caption-full" id="imageDescription">
                    <% if(currentUser && Photo.author.id.equals(currentUser._id)){ %>
                    <div class="float-right">
                    <a class="btn btn-outline-success btn-sm" href="/photos/<%= Photo._id %>/edit">Edit</a>
                    <form method="POST" action="/photos/<%= Photo._id %>?_method=DELETE" id="deletePhoto">
                        <button class="btn btn-outline-danger btn-sm">Delete</button>
                    </form>
                    </div>
                    <% } %>
                    <h4>Diary:</h4>
                    <p><%= Photo.desc %></p>
                </div>
            </div>
            <div id="commentButton" class="text-right">
                <a href="" class="btn btn-warning btn-sm">Add New Comment</a>
            </div>
            <div class="card">
                <div class="card-header">
                 <strong>Comments</strong>
                </div>
                <div class="card-body">
                <h6 class="card-title">
                    Sanjay
                    <a href="#" class="btn btn-outline-danger btn-sm float-right" style="margin: 2px;">Delete</a>
                    <a href="#" class="btn btn-outline-success btn-sm float-right" style="margin: 2px;">Edit</a>
                    
                </h6>
                <p class="card-text"><em>With supporting text below as a natural lead-in to additional content.</em></p>
              </div>
            </div>
        </div>
        <div class="col-md-3" id="description" >
            <div class="list-group">
                <li class="list-group-item active">Captured By</li>
                <li class="list-group-item"><%= Photo.author.username %></li>
                <li class="list-group-item"><%=Photo.date.toDateString()%></li>
                <a href="/photos" class="btn btn-info btn-block">Back to Photos</a>
            </div>
        </div>
    </div>
</div>


<% include ../../partials/footer %>