<% include ../partials/header %>


    <div class="jumbotron jumbotron-fluid text-center" id="registerJumbotron">
          <div class="container">
            <h1 class="display-4">Create <i class="fas fa-camera-retro"></i> PhotoDiary Account</h1>
          </div>
        </div>
        <div class="container">
    <div class="newForm">
        <form method="POST" action="/register">
          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" id="title" name="user[name]" placeholder="Enter Username" required>
            <small id="usernameHelp" class="form-text text-muted">Enter a username for your account. This will be used for login.</small>
          </div>
          <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" name="user[password]" placeholder="Enter a password for your account" required>
            <small id="passwordHelp" class="form-text text-muted">Make sure to give a strong alphanumeric password.</small>
          </div>
          <button id="createButton" type="submit" class="btn btn-outline-info btn-block">Create Account</button>
        </form>
    </div>
</div>

<% include ../partials/footer %>